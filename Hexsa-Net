from turtle import *
tom = Turtle()
tom.shape('turtle')
tom.speed(100)
tom.color('gold')

def sample():
    side = 200
    tom.width(0.5)
    for count in range (40):
        for i in range (3):
            tom.fd(side)
            tom.lt(120)
        side=side-5

for k in range (6):
    sample()
    tom.lt(60)

tom.width(0.3)
for t in range (100):
    tom.fd(200)
    tom.fd(-200)
    tom.lt(360.0/100)
    
tom.rt(90)
tom.fd(200)
tom.lt(90)
tom.circle(200)
